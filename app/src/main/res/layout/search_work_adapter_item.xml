<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:background="#fff"
                android:orientation="vertical">

    <View
        android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/iv_works"
        android:layout_width="108dp"
        android:layout_height="90dp"
        android:layout_below="@+id/view_blank"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/tv_works_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_blank"
        android:layout_marginRight="13dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/iv_works"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="17sp"
        tools:text="覆盆子绿豆佩沙拉应该很好吃的样子"/>

    <TextView
        android:id="@+id/tv_works_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_works_title"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_works"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#9b9b9b"
        android:textSize="12sp"
        tools:text="覆盆子酱、绿豆、沙拉、苹果苹果苹果"/>

    <TextView
        android:id="@+id/tv_works_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@+id/iv_works"
        android:textColor="#9b9b9b"
        android:textSize="12sp"
        tools:text="928人收藏"
        />

    <TextView
        android:id="@+id/tv_works_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_works_collect"
        android:textColor="#9b9b9b"
        android:textSize="12sp"
        tools:text="胡含"
        />


</RelativeLayout>